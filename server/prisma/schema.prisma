enum OperationStatusEnum {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

enum OperationTypeEnum {
  SPAWN
  RUN
  RETURN
  KILL
}

enum MessageRoleEnum {
  USER
  SYSTEM
  ASSISTANT
}

enum ActionEnum {
  FOLDER
  PLAN
  ROUTE_ACTION
  CODE
  SEARCH
  REVIEW_GOAL_PROGRESS
}

enum AgentStatusEnum {
  ACTIVE
  WAITING_FOR_USER_INPUT
  DEAD
  PAUSED
  ERROR
}

enum KillPolicyEnum {
  SIMPLE
  CONFIRM_DIRECTIVE_COMPLETION
  CUSTOM_KILL_HANDLER
}

enum ToolTypeEnum {
  GITHUB_CLONE
}

enum InformationTypeEnum {
  FOLDER
  GITHUB_REPOSITORY_LINK
  PYTHON_FILE
  TYPESCRIPT_FILE
  STRING
}

enum AgentNodeEdgeTypeEnum {
  SPAWN
  KILL
  RETURN
}

enum ChatStatusEnum {
  ACTIVE
  COMPLETED
}

